<div>
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Username:</strong>
    <%= user.username %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p> 

  <% if user.total_score %>
    <p>
      <strong>Total score:</strong>
      <%= user.total_score %>
    </p>

  <p>
    <strong>Rank:</strong>
    <%= user.rank %>
  </p>

  <% end %>

</div>