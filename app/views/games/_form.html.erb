<%= form_for([user, game], remote: true) do |f| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :difficulty %>
    <%= f.range_field :difficulty, min:0, max:100, class:"slide", id:"slider" %>
    <span>50</span>
  </div>

  <div class="field">
    <%= f.label :minimum_length %>
    <%= f.range_field :minimum_length, min:1, max:100, class:"slide", id:"slider" %>
    <span>50</span>
  </div>   

  <div class="field">
    <%= f.label :maximum_length %>
    <%= f.range_field :maximum_length, min:1, max:100, class:"slide", id:"slider" %>
    <span>50</span>
  </div>  

  <div class="actions">
    <%= f.submit value:"Let's Play!" %>
  </div>
<% end %>